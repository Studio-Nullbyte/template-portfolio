# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CONTACT FORM CONFIGURATION
# =============================================================================
# EmailJS configuration for contact form functionality
# Sign up at https://www.emailjs.com/ to get these values
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_emailjs_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Google Analytics tracking ID
# Get from https://analytics.google.com/
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (automatic if deployed on Vercel)
# No configuration needed

# =============================================================================
# CONTENT MANAGEMENT SYSTEM (OPTIONAL)
# =============================================================================
# Sanity CMS configuration
# Sign up at https://www.sanity.io/ and create a project
SANITY_PROJECT_ID=your_sanity_project_id
SANITY_DATASET=production
SANITY_API_VERSION=2023-05-03
SANITY_TOKEN=your_sanity_token

# Contentful CMS configuration (alternative to Sanity)
# Sign up at https://www.contentful.com/
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token
CONTENTFUL_PREVIEW_ACCESS_TOKEN=your_contentful_preview_token

# =============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# =============================================================================
# PostgreSQL database URL (if using database features)
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio

# MongoDB connection string (alternative database)
MONGODB_URI=mongodb://localhost:27017/portfolio

# =============================================================================
# AUTHENTICATION (OPTIONAL)
# =============================================================================
# NextAuth.js configuration (if adding admin features)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# GitHub OAuth (for admin login)
GITHUB_ID=your_github_oauth_app_id
GITHUB_SECRET=your_github_oauth_app_secret

# =============================================================================
# IMAGE OPTIMIZATION
# =============================================================================
# Cloudinary configuration (for advanced image optimization)
# Sign up at https://cloudinary.com/
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Vercel deployment configuration (automatically set by Vercel)
VERCEL_URL=your_vercel_url
VERCEL_GIT_COMMIT_SHA=automatically_set_by_vercel

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Node environment (development, production, test)
NODE_ENV=development

# Enable detailed logging in development
DEBUG=true

# =============================================================================
# SOCIAL MEDIA INTEGRATION (OPTIONAL)
# =============================================================================
# Twitter API configuration (for tweet embeddings)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Instagram Basic Display API (for Instagram feed)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# =============================================================================
# MONITORING AND ERROR TRACKING (OPTIONAL)
# =============================================================================
# Sentry configuration for error tracking
# Sign up at https://sentry.io/
SENTRY_DSN=your_sentry_dsn

# LogRocket session replay (optional)
LOGROCKET_APP_ID=your_logrocket_app_id

# =============================================================================
# EMAIL SERVICES (OPTIONAL)
# =============================================================================
# SendGrid configuration (alternative to EmailJS)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=your_verified_sender_email

# Nodemailer SMTP configuration (another alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# =============================================================================
# NOTES
# =============================================================================
# - Never commit .env.local to version control
# - Use .env.example for sharing template with others
# - Restart your development server after changing environment variables
# - Some variables require NEXT_PUBLIC_ prefix to be available in the browser
# - Contact form will work without configuration but won't send emails
# - Analytics are optional but recommended for tracking website performance
